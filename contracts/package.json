{
  "name": "bittask-tests",
  "version": "1.0.0",
  "description": "Run unit tests on this project.",
  "type": "module",
  "private": true,
  "scripts": {
    "test": "vitest run",
    "test:report": "vitest run -- --coverage --costs",
    "test:watch": "chokidar \"tests/**/*.ts\" \"contracts/**/*.clar\" -c \"npm run test:report\"",
    "test:multi-token": "vitest run multi-token-suite.test.ts",
    "deploy:multi-token": "ts-node scripts/deploy-multi-token-suite.ts",
    "deploy:testnet": "STACKS_NETWORK=testnet ts-node scripts/deploy-multi-token-suite.ts",
    "deploy:mainnet": "STACKS_NETWORK=mainnet ts-node scripts/deploy-multi-token-suite.ts",
    "utils:demo": "ts-node scripts/multi-token-demo.ts",
    "check:contracts": "clarinet check",
    "format:contracts": "clarinet format",
    "analyze:contracts": "clarinet analyze"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@stacks/clarinet-sdk": "^3.9.0",
    "@stacks/network": "^7.3.1",
    "@stacks/transactions": "^7.2.0",
    "@stacks/wallet-sdk": "^7.2.0",
    "chokidar-cli": "^3.0.0",
    "dotenv": "^17.2.3",
    "tsx": "^4.21.0",
    "vitest": "^4.0.7",
    "vitest-environment-clarinet": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.3"
  }
}
